@{
    ViewBag.Title = "Home Page";
}
@section headerLogo {
    <div class="headerLogo">
        <div class="headerLogoBtmBorder"></div>
            <div class="container">
                <img src="Images/rsMedicalSymbol.png" class="pull-right" />
                <div class="logo">
                Record Solutions
                <div class="slogan">
                    Whatever your record need, we can get it done.
                </div>
            </div>
        </div>
    </div>
}

<!-- Page header -->
